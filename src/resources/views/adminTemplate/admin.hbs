<div class="container" style="padding: 0 50px 50px 50px">
     <div class="form-container">
          <form action="/admin" method="post" onsubmit="return validateForm()">
               <div class="row" style="justify-content: space-between;">
                    <h3>Thông tin liên hệ</h3>
                    <button type="submit" class="btn btn-success">Cập nhật</button>
               </div>
               <div class="form-top row">
                    <div class="form-top-left col-6">
                         <div class="form-group">
                              <label>Tên trang website</label>
                              <input class="form-control" type="text" name="name" id="name" value="{{admin.name}}" />
                         </div>
                         <div class="form-group">
                              <label>Email</label>
                              <input class="form-control" type="email" name="email" id="email" value="{{admin.email}}"
                                   required />
                         </div>
                         <div class="form-group">
                              <label>Số điện thoại</label>
                              <input class="form-control" type="text" name="phoneNumber" id="phoneNumber"
                                   value="{{admin.phoneNumber}}" />
                         </div>
                         <div class="form-group">
                              <label>Địa chỉ</label>
                              <input class="form-control" type="text" name="address" id="address"
                                   value="{{admin.address}}" />
                         </div>
                    </div>
                    <div class="form-top-right col-6">
                         <div class="form-group">
                              <label>Tên đăng nhập admin</label>
                              <input class="form-control" type="text" name="username" id="username"
                                   value="{{admin.username}}" />
                         </div>
                         <div class="form-group">
                              <label>Mật khẩu</label>
                              <input class="form-control" type="password" name="password" id="password"
                                   value="{{admin.password}}" />
                         </div>
                         <div class="form-group">
                              <label>Liên kết trang Facebook</label>
                              <input class="form-control" type="text" name="facebook_id" id="facebook_id"
                                   value="{{admin.facebook_id}}" />
                         </div>
                         <div class="form-group">
                              <label>Số điện thoại Zalo</label>
                              <input class="form-control" type="text" name="zalo_phoneNumber" id="zalo_phoneNumber"
                                   value="{{admin.zalo_phoneNumber}}" />
                         </div>
                    </div>
               </div>
               <div class="form-bottom">
                    <h3>Cấu hình cho trang website</h3>
                    <div class="form-group">
                         <label>Tiêu đề trang website</label>
                         <input class="form-control" type="text" name="seo_title" id="seo_title"
                              value="{{admin.seo_title}}" />
                    </div>
                    <div class="form-group">
                         <label>Từ khóa SEO</label>
                         <input class="form-control" type="text" name="seo_keywords" id="seo_keywords"
                              value="{{admin.seo_keywords}}" />
                    </div>
                    <div class="form-group">
                         <label>Mô tả Description</label>
                         <textarea class="form-control" name="seo_description" id="seo_description"
                              rows="3">{{admin.seo_description}}</textarea>
                    </div>
                    <div class="form-group">
                         <label>Liên kết google map</label>
                         <textarea class="form-control" name="google_map" rows="3">{{admin.google_map}}</textarea>
                    </div>
                    <div class="form-group">
                         <label>Mã Script chèn thêm</label>
                         <textarea class="form-control" name="head_script" rows="3">{{admin.head_script}}</textarea>
                    </div>
               </div>
               <button type="submit" class="btn btn-success p-2">Cập nhật</button>
          </form>
     </div>
</div>

<script>
     function validateForm() {
          var name = document.getElementById("name").value;
          var email = document.getElementById("email").value;
          var phoneNumber = document.getElementById("phoneNumber").value;
          var address = document.getElementById("address").value;
          var username = document.getElementById("username").value;
          var password = document.getElementById("password").value;
          var facebookId = document.getElementById("facebook_id").value;
          var zaloPhoneNumber = document.getElementById("zalo_phoneNumber").value;
          var seoTitle = document.getElementById("seo_title").value;
          var seoKeywords = document.getElementById("seo_keywords").value;
          var seoDescription = document.getElementById("seo_description").value;

          if (name === "") {
               alert("Vui lòng nhập Tên trang website");
               return false;
          }
          if (email === "") {
               alert("Vui lòng nhập Email");
               return false;
          }
          if (phoneNumber === "") {
               alert("Vui lòng nhập Số điện thoại");
               return false;
          }
          if (address === "") {
               alert("Vui lòng nhập Địa chỉ");
               return false;
          }
          if (username === "") {
               alert("Vui lòng nhập Tên đăng nhập admin");
               return false;
          }
          if (password === "") {
               alert("Vui lòng nhập Mật khẩu");
               return false;
          }
          if (facebookId === "") {
               alert("Vui lòng nhập Liên kết trang Facebook");
               return false;
          }
          if (zaloPhoneNumber === "") {
               alert("Vui lòng nhập Số điện thoại Zalo");
               return false;
          }
          if (seoTitle === "") {
               alert("Vui lòng nhập Tiêu đề trang website");
               return false;
          }
          if (seoKeywords === "") {
               alert("Vui lòng nhập Từ khóa SEO");
               return false;
          }
          if (seoDescription === "") {
               alert("Vui lòng nhập Mô tả Description");
               return false;
          }

          return true;
     }
</script>