<style>
     #editor {
          height: 600px !important;
     }
</style>
<div class="container" style="padding: 0 50px 50px 50px">
     <div class="form-container">
          <form action="/admin/dich-vu" method="post" onsubmit="return validateForm()">
               <div class="form-group">
                    <label>Nội dung bài viết</label>
                    <textarea class="form-control" id="editor" name="content" rows="3">{{service.content}}</textarea>
               </div>

               <div class="form-group">
                    <label>Tiêu đề bài viết</label>
                    <input class="form-control" type="text" name="seo_title" value="{{service.seo_title}}" />
               </div>
               <div class="form-group">
                    <label>Từ khóa SEO</label>
                    <input class="form-control" type="text" name="seo_keywords" value="{{service.seo_keywords}}" />
               </div>
               <div class="form-group">
                    <label>Mô tả Description</label>
                    <textarea class="form-control" name="seo_description"
                         rows="3">{{service.seo_description}}</textarea>
               </div>

               <button type="submit" class="btn btn-success p-2">Cập nhật</button>
          </form>
     </div>
</div>
<script>
     CKEDITOR.replace('editor');
     function validateForm() {
          // Lấy các trường dữ liệu từ form
          var content = document.forms[0].content.value;
          var seoTitle = document.forms[0].seo_title.value;
          var seoKeywords = document.forms[0].seo_keywords.value;
          var seoDescription = document.forms[0].seo_description.value;

          // Kiểm tra các trường dữ liệu
          if (content === "") {
               alert("Nội dung bài viết không được để trống");
               return false;
          }
          if (seoTitle === "") {
               alert("Tiêu đề bài viết không được để trống");
               return false;
          }
          if (seoKeywords === "") {
               alert("Từ khóa SEO không được để trống");
               return false;
          }
          if (seoDescription === "") {
               alert("Mô tả Description không được để trống");
               return false;
          }

          // Trả về true để cho phép submit form
          return true;
     }
</script>